<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="btn_text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="tab_meal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="sRlMealMargin">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="meal_info_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_grey2</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="sTvMealTip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/contentColor</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!-- 包含多个元素的底部按钮，按钮layout样式 -->
    <style name="selfserver_quary_buttom_btn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/btn_green_selector</item>
    </style>
</resources>
